<?xml version="1.0"?>

<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:em="http://www.mozilla.org/2004/em-rdf#">

  <Description about="urn:mozilla:install-manifest">
    <em:id>html-email@leblanc.io</em:id>
    <em:version>1.0</em:version>
    <em:type>2</em:type>
    <em:unpack>true</em:unpack>
   
    <!-- L'application cible de votre extension, 
         avec les versions minimums et maximums supportées. --> 
    <em:targetApplication>
      <!-- Thunderbird -->
      <Description>
        <em:id>{3550f703-e582-4d05-9a08-453d09bdfdc6}</em:id>
        <em:minVersion>38.0</em:minVersion>
        <em:maxVersion>56.0</em:maxVersion>
      </Description>
    </em:targetApplication>
   
    <!-- Méta-données visibles -->
    <em:name>Compose HTML Email</em:name>
    <em:description>Une extension permettant de composer un email en HTML lorsque le paramétrage par défaut est la composition en texte brut</em:description>
    <em:creator>Simon Leblanc</em:creator>
    <em:homepageURL>https://leblanc-simon.fr/</em:homepageURL>
    <em:iconURL>chrome://html-email/skin/icon.png</em:iconURL>
  </Description>      
</RDF>
